{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "automerge": false,
  "dependencyDashboard": false,
  "platformAutomerge": true,
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "groupName": "svelte",
      "matchPackageNames": [
        "svelte",
        "svelte-loader",
        "svelte-check"
      ],
      "matchPackagePrefixes": [
        "@sveltejs"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": [
        "eslint",
        "eslint-plugin-svelte",
        "typescript-eslint"
      ]
    },
    {
      "groupName": "vite",
      "matchPackageNames": [
        "vite",
        "vite-plugin-svelte",
        "vitest"
      ]
    }
  ]
}
